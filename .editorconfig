#
# EditorConfig is awesome: http://EditorConfig.org
#

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = true

[*.{java,xml,json,md,yml}]
charset = utf-8

[*.properties]
charset = latin1

[*.{java,xml,md}]
indent_style = tab
indent_size = 4

[*.{json,yml}]
indent_style = space
indent_size = 2
